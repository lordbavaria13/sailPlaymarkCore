    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "handlebars": "^4.7.8",
    "hapi-swagger": "^17.3.2",
    "joi": "^18.0.2",
    "lowdb": "^7.0.1",
    "mongoose": "^9.1.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
