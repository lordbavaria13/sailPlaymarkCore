  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev:tsc": "tsc --watch",
    "start": "npm run build && node dist/server.js",
    "dev": "npx nodemon --watch src --ext ts --exec tsx src/server.ts",
    "dev:ts-node-dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "eslint src/**/*.{ts,js} --ext .ts,.js",
    "lint:fix": "npm run lint:fix --silent",
    "test": "mocha --ui tdd --import=tsx \"src/test/**/*.ts\" --exit",
    "testmodels": "mocha --ui tdd --import=tsx \"src/test/models/*.ts\" --exit",
    "testapi": "mocha --ui tdd --import=tsx \"src/test/api/*.ts\" --exit"
  },
  "keywords": [],
