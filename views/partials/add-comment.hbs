<form class="box" action="/dashboard/placemark/{{placemark._id}}/comment" method="POST">
  <h3 class="title is-5">Add Comment & Rating</h3>
  
  <div class="field">
    <label class="label">Rating</label>
    <div class="control">
      <div class="select">
        <select name="rating">
          <option value="5">⭐⭐⭐⭐⭐ (5)</option>
          <option value="4">⭐⭐⭐⭐ (4)</option>
          <option value="3">⭐⭐⭐ (3)</option>
          <option value="2">⭐⭐ (2)</option>
          <option value="1">⭐ (1)</option>
        </select>
      </div>
    </div>
  </div>

  <div class="field">
    <label class="label">Comment</label>
    <div class="control">
      <textarea class="textarea" name="text" placeholder="Share your experience..."></textarea>
    </div>
  </div>

  <div class="field">
    <button class="button is-link">Submit Review</button>
  </div>
</form>
