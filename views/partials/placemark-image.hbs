<div class="card">
  <div class="card-image">
    <div class="columns is-multiline">
      {{#each placemark.images}}
        <div class="column is-4">
            <figure class="image is-256x256">
                <img src="{{this}}" alt="Placemark image">
            </figure>
            <br>
            <form action="/dashboard/placemark/{{../placemark._id}}/deleteimage" method="POST">
                <input type="hidden" name="url" value="{{this}}">
                <button type="submit" class="button is-danger is-small is-fullwidth">Delete</button>
            </form>
        </div>
      {{/each}}
    </div>
  </div>
  <div class="card-content">
    <form action="/dashboard/placemark/{{placemark._id}}/uploadimage" method="POST" enctype="multipart/form-data">
      <div id="file-select" class="file has-name is-fullwidth">
        <label class="file-label"> <input class="file-input" name="imagefile" type="file" accept="image/png, image/jpeg">
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Choose a fileâ€¦
            </span>
           </span>
          <span class="file-name"></span>
        </label>
        <button type="submit" class="button is-info">Upload</button>
      </div>
    </form>
  </div>
</div>

<script>
  const fileInput = document.querySelector(".file-input");
  fileInput.onchange = () => {
    if (fileInput.files.length > 0) {
      const fileName = document.querySelector(".file-name");
      fileName.textContent = fileInput.files[0].name;
    }
  };
</script>
