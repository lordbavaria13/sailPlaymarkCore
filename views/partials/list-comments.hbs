<div class="box">
  <h3 class="title is-5">Reviews</h3>
  {{#each comments}}
    <article class="media">
      <div class="media-content">
        <div class="content">
          <p>
            <strong>{{username}}</strong> <small>{{date}}</small>
            <br>
            Rating: 
            {{#if (eq rating 5)}}⭐⭐⭐⭐⭐{{/if}}
            {{#if (eq rating 4)}}⭐⭐⭐⭐{{/if}}
            {{#if (eq rating 3)}}⭐⭐⭐{{/if}}
            {{#if (eq rating 2)}}⭐⭐{{/if}}
            {{#if (eq rating 1)}}⭐{{/if}}
             ({{rating}}/5)
            <br>
            {{text}}
          </p>
        </div>
      </div>
    </article>
  {{else}}
    <p class="has-text-grey">No reviews yet.</p>
  {{/each}}
</div>
