{{> welcome-menu active="login"}}

<section class="section">
  <h1 class="title">Log in</h1>
  <form action="/authenticate" method="POST">
    <div class="field">
      <label class="label">Username</label> <input class="input" type="text" placeholder="Enter username" name="username">
    </div>
    <div class="field">
      <label class="label">Password</label> <input class="input" type="password" placeholder="Enter Password" name="password">
    </div>
    <div class="field is-grouped">
      <button class="button is-link">Submit</button>
    </div>
  </form>
  <hr>
  <div class="buttons">
      <a href="/login/github" class="button is-dark">
        <span class="icon"><i class="fab fa-github"></i></span>
        <span>Login with GitHub</span>
      </a>
      <a href="/login/google" class="button is-danger">
        <span class="icon"><i class="fab fa-google"></i></span>
        <span>Login with Google</span>
      </a>
  </div>
</section>
